<config>
    <minLevel>DEBUG</minLevel>
    <pattern>[%{timestamp:datetime('yyyy-MM-dd HH:mm:ss')}] [%{level:LEVEL|padRight(8)}] (%{package:CYAN}) %{message}</pattern>
    <consoleColour>true</consoleColour>
    <appenders>
        <console enabled="true"/>
        <file enabled="true" path="app.log" bufferSize="16384" append="true"/>
    </appenders>
    <levelPalette
        debug="BLUE"
        info=""
        warn="BRIGHT_YELLOW"
        success="GREEN"
        error="RED"
        critical="BG_BRIGHT_RED"
    />
</config>
